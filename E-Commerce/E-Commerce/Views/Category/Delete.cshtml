@model E_Commerce.Entity.Category
@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<section class="content">
    <h3>&emsp; &emsp;<font face="tahoma" size="5" color="red"> @Model.Name </font>kategorisini silmek istediğinize emin misiniz?</h3>
    <div>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                Kategori Adı  = 
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt>
                Açıklama  = 
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Description)
            </dd>
        </dl>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
        <div class="container">
            <div class="form-actions no-color">
                <input type="submit" value="Sil" class="btn btn-danger" /> |
                @Html.ActionLink("Kategorilere Dön", "Index", null, new { @class = "btn btn-warning" })
            </div>
        </div>
        }
    </div>
</section>